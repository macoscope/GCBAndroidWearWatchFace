<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="@string/pref_sync_frequency_default_value"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="@string/pref_key_sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency"/>

    <Preference
        android:key="@string/pref_key_sync_account"
        android:title="@string/pref_sync_account"/>

    <ListPreference
        android:defaultValue="@null"
        android:key="@string/pref_key_sync_calendar"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_calendar"/>

    <Preference
        android:key="@string/pref_key_sync_now"
        android:title="@string/pref_sync_now"/>
</PreferenceScreen>
