<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="55"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="@string/pref_key_sync_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_sync_frequency"/>

    <Preference
        android:key="@string/pref_key_sync_account"
        android:title="Sync account"/>

    <ListPreference
        android:key="@string/pref_key_sync_calendar"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_calendar"/>

    <Preference
        android:key="pref_dummy_events"
        android:summary="Send dummy events"
        android:title="TEST"/>

</PreferenceScreen>
